# server/services/.env.example

PORT=3000
DB_PATH=server/db/ksv.sqlite

# Для ручного запуску sync (POST /api/sync). Якщо порожньо — без авторизації.
SYNC_API_KEY=change_me

# Google Sheets
GOOGLE_SHEET_ID=your_sheet_id_here
GOOGLE_SHEET_TAB=Місце встановлення камер (координати)

# Один з двох варіантів:
# 1) шлях до service account json
GOOGLE_SERVICE_ACCOUNT_JSON=server/keys/service_account.json

# 2) або base64 json (зручно для деплою)
# GOOGLE_SERVICE_ACCOUNT_B64=
